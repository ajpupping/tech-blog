<header>
    <h1>Your Dashboard</h1>
</header>

<main>
    <section>
        <h2>Your Posts</h2>
        <div id="user-post-container">
            {{#each posts}}
            <article class="post" data-id="{{this.id}}"></article>
                <h3>{{this.title}}</h3>
                <p>{{this.content}}</p>
                <button class="delete-btn" data-id="{{this.id}}">Delete</button>
                <button class="update-btn" data-id="{{this.id}}">Update</button>
            {{/each}}
        </div>
        
    </section>
    
    <section>
        <button><a href="/posts/new" class="btn">New Post</a></button>
    </section>
</main>

<script src="/js/dashboard.js"></script>