<header>
    <h1>Your Dashboard</h1>
</header>

<main>
    <section>
        <h2>Your Posts</h2>
        {{#if posts.length}}
            {{#each posts}}
                {{> _post this}}
            {{/each}}
        {{else}}
            <p>You haven't posted anything yet.</p>
        {{/if}}
    </section>
    
    <section>
        <h2>Create a New Post</h2>
        <form action="/posts/new" method="GET">
            <button type="submit">New Post</button>
        </form>
    </section>
</main>
